<div id="flash-messages" class="container">
  <div class="row">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= {notice: 'success', alert: 'danger'}[key] -%>
                alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= value.html_safe %>
    </div>
  <% end %>
  </div>
</div>
